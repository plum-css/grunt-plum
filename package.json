{
  "name": "grunt-plum",
  "version": "1.2.0",
  "description": "Grunt plugin to build and run visual regression tests against plum stylesheets.",
  "author": {
    "name": "Jason Bellamy",
    "email": "j@sonbellamy.com",
    "url": "http://jasonbellamy.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/plum-css/grunt-plum.git"
  },
  "bugs": {
    "url": "https://github.com/plum-css/grunt-plum/issues"
  },
  "keywords": [
    "gruntplugin",
    "plum",
    "regression",
    "testing"
  ],
  "files": "tasks",
  "engines": {
    "node": ">= 0.10.0"
  },
  "license": "MIT",
  "dependencies": {
    "plum-test": "~0.2.0"
  },
  "devDependencies": {
    "babel": "^5.2.15",
    "core-js": "^0.9.6",
    "grunt": "~0.4.2",
    "grunt-cli": "^0.1.13",
    "load-grunt-tasks": "~0.3.0",
    "mocha": "*",
    "should": "3.1.2"
  },
  "scripts": {
    "clean": "rm -rf tasks",
    "build-dist": "babel -d tasks src",
    "build": "npm run clean && npm run build-dist",
    "test": "grunt && mocha --compilers js:babel/register"
  }
}
